<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>classpath:messages</value>

				<!-- spring security -->
				<value>classpath:org/springframework/security/messages</value>

				<!-- hibernate validator -->
				<value>classpath:org/hibernate/validator/ValidationMessages</value>

				<!-- example -->
				<value>classpath:messages/example/button</value>
				<value>classpath:messages/example/errors</value>
				<value>classpath:messages/example/caption</value>
				<value>classpath:messages/example/heading</value>
				<value>classpath:messages/example/label</value>
				<value>classpath:messages/example/menu</value>
				<value>classpath:messages/example/messages</value>
				<value>classpath:messages/example/title</value>

				<!-- example crud -->
				<value>classpath:messages/example/crud/emp/button</value>
				<value>classpath:messages/example/crud/emp/errors</value>
				<value>classpath:messages/example/crud/emp/caption</value>
				<value>classpath:messages/example/crud/emp/heading</value>
				<value>classpath:messages/example/crud/emp/label</value>
				<value>classpath:messages/example/crud/emp/menu</value>
				<value>classpath:messages/example/crud/emp/messages</value>
				<value>classpath:messages/example/crud/emp/title</value>

				<!-- example validation -->
				<value>classpath:messages/example/validation/button</value>
				<value>classpath:messages/example/validation/errors</value>
				<value>classpath:messages/example/validation/caption</value>
				<value>classpath:messages/example/validation/heading</value>
				<value>classpath:messages/example/validation/label</value>
				<value>classpath:messages/example/validation/menu</value>
				<value>classpath:messages/example/validation/messages</value>
				<value>classpath:messages/example/validation/title</value>

				<!-- system -->
				<value>classpath:messages/system/alternate</value>
				<value>classpath:messages/system/button</value>
				<value>classpath:messages/system/errors</value>
				<value>classpath:messages/system/caption</value>
				<value>classpath:messages/system/heading</value>
				<value>classpath:messages/system/label</value>
				<value>classpath:messages/system/menu</value>
				<value>classpath:messages/system/messages</value>
				<value>classpath:messages/system/title</value>

				<!-- system security -->
				<value>classpath:messages/system/security/alternate</value>
				<value>classpath:messages/system/security/button</value>
				<value>classpath:messages/system/security/errors</value>
				<value>classpath:messages/system/security/caption</value>
				<value>classpath:messages/system/security/heading</value>
				<value>classpath:messages/system/security/label</value>
				<value>classpath:messages/system/security/menu</value>
				<value>classpath:messages/system/security/messages</value>
				<value>classpath:messages/system/security/title</value>

				<!-- system help -->
				<value>classpath:messages/system/help/alternate</value>
				<value>classpath:messages/system/help/button</value>
				<value>classpath:messages/system/help/errors</value>
				<value>classpath:messages/system/help/caption</value>
				<value>classpath:messages/system/help/heading</value>
				<value>classpath:messages/system/help/label</value>
				<value>classpath:messages/system/help/menu</value>
				<value>classpath:messages/system/help/messages</value>
				<value>classpath:messages/system/help/title</value>

				<!-- common -->
				<value>classpath:messages/common/alternate</value>
				<value>classpath:messages/common/button</value>
				<value>classpath:messages/common/errors</value>
				<value>classpath:messages/common/caption</value>
				<value>classpath:messages/common/heading</value>
				<value>classpath:messages/common/label</value>
				<value>classpath:messages/common/menu</value>
				<value>classpath:messages/common/messages</value>
				<value>classpath:messages/common/title</value>

			</list>
		</property>
		<property name="cacheSeconds" value="1" />
	</bean>

</beans>
